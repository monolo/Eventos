{% extends 'JetEventsBundle::layout.html.twig' %}
{% block title %}Viendo User{% endblock %}
{% block main %}
<h1>Viendo User</h1>
<table class="table-striped">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Surname</th>
            <td>{{ entity.surname }}</td>
        </tr>
        <tr>
            <th>Created_at</th>
            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updated_at</th>
            <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-info" href="{{ path('profile') }}">
            Volver atr√°s
        </a>
        <a class="btn btn-success" href="{{ path('profile_edit', { 'id': entity.id }) }}">
            Editar
        </a>
        <form action="{{ path('profile_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Borrar</button>
        </form>

{% endblock %}

