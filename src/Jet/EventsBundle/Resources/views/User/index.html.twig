{% extends 'JetEventsBundle::layout.html.twig' %}
{% block title %}User{% endblock %}
{% block main %}
<h1>User</h1>
<table class="table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Created_at</th>
            <th>Updated_at</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('profile_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.surname }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
                    <a class="btn" href="{{ path('profile_show', { 'id': entity.id }) }}">show</a>
                    <a class="btn" href="{{ path('profile_edit', { 'id': entity.id }) }}">edit</a>

            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

        <a class="btn btn-success" href="{{ path('profile_new') }}">
            Nuevo
        </a>
{% endblock %}

